{% extends 'base.html.twig' %}

{% block title %}Chakra index{% endblock %}

{% block body %}
    <h1>Chakra index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chakra in chakras %}
            <tr>
                <td>{{ chakra.id }}</td>
                <td>{{ chakra.name }}</td>
                <td>
                    <a href="{{ path('chakra_show', {'id': chakra.id}) }}">show</a>
                    <a href="{{ path('chakra_edit', {'id': chakra.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('chakra_new') }}">Create new</a>
{% endblock %}
