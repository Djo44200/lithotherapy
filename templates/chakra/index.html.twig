{% extends 'base.html.twig' %}

{% block title %}Chakra index{% endblock %}

{% block body %}
    <h1>Liste des chakras</h1>
    <a href="{{ path('chakra_new') }}">
        <button class="btn bouton">Créer un chakra</button>
    </a>
    <br><br>
<div class="table-responsive-xl">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chakra in chakras %}
            <tr>
                <td>{{ chakra.id }}</td>
                <td>{{ chakra.name }}</td>
                <td>
                    <a href="{{ path('chakra_show', {'id': chakra.id}) }}">show</a>
                    <a href="{{ path('chakra_edit', {'id': chakra.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun chakra trouvé </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
