{% extends 'base.html.twig' %}

{% block title %}Reload index{% endblock %}

{% block body %}
    <h1>Liste des rechargements</h1>
    <a href="{{ path('reload_new') }}">
        <button class="btn bouton">Créer un rechargement</button>
    </a>
    <br><br>
    <div class="table-responsive-xl">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for reload in reloads %}
                <tr>
                    <td>{{ reload.id }}</td>
                    <td>{{ reload.name }}</td>
                    <td>
                        <a href="{{ path('reload_show', {'id': reload.id}) }}">show</a>
                        <a href="{{ path('reload_edit', {'id': reload.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun rechargement trouvé </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
