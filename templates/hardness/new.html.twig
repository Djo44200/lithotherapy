{% extends 'base.html.twig' %}

{% block title %}New hardness{% endblock %}

{% block body %}
    <h1>Créer une nouvelle dureté</h1>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                {{ form_start(form) }}

                {{ form_label(form.number)}}
                {{form_widget(form.number, {'attr': {'class':'form-control'}})}}
                {{ form_errors(form.number) }}
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-4">
                {{form_widget(form.submit)}}
            </div>
            {{ form_end(form) }}
            <div class="col-8">
                <a href="{{ path('hardness_index') }}"><button class="btn bouton">Retour à la liste</button></a>
            </div>
        </div>
    </div>
{% endblock %}
