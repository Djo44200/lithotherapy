{% extends 'base.html.twig' %}

{% block title %}Color index{% endblock %}

{% block body %}
    <h1>Liste des couleurs</h1>
    <a href="{{ path('color_new') }}">
        <button class="btn bouton">Créer une couleur</button>
    </a>
    <br><br>
    <div class="table-responsive-xl">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for color in colors %}
                <tr>
                    <td>{{ color.id }}</td>
                    <td>{{ color.name }}</td>
                    <td>
                        <a href="{{ path('color_show', {'id': color.id}) }}">show</a>
                        <a href="{{ path('color_edit', {'id': color.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucune couleur trouvée </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
