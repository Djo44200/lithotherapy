{% extends 'base.html.twig' %}

{% block title %}Mineral index{% endblock %}

{% block body %}
    <h1>Mineral index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Propriety</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mineral in minerals %}
            <tr>
                <td>{{ mineral.id }}</td>
                <td>{{ mineral.name }}</td>
                <td>{{ mineral.description }}</td>
                <td>{{ mineral.propriety }}</td>
                <td>{{ mineral.photo }}</td>
                <td>
                    <a href="{{ path('mineral_show', {'id': mineral.id}) }}">show</a>
                    <a href="{{ path('mineral_edit', {'id': mineral.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mineral_new') }}">Create new</a>
{% endblock %}
