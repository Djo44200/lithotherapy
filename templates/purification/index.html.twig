{% extends 'base.html.twig' %}

{% block title %}Purification index{% endblock %}

{% block body %}
    <h1>Purification index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for purification in purifications %}
            <tr>
                <td>{{ purification.id }}</td>
                <td>{{ purification.name }}</td>
                <td>
                    <a href="{{ path('purification_show', {'id': purification.id}) }}">show</a>
                    <a href="{{ path('purification_edit', {'id': purification.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('purification_new') }}">Create new</a>
{% endblock %}
